<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">


    <TextView
        android:id="@+id/tv_weather_day"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_weather_text"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:textSize="22sp"
        android:textColor="#b52a18"/>

    <TextView
        android:id="@+id/tv_weather_precip"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:padding="0dp"
        android:textSize="22sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">


        <TextView
            android:id="@+id/tv_weather_hi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="#ff1e00"/>

        <TextView
            android:id="@+id/tv_weather_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="#00c3ff"/>


    </LinearLayout>

</LinearLayout>